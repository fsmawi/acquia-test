<h3 class="route"><a href="/" id="{{ route.name }}">{{ route.method }} {{ route.uri }}</a></h3>
<p>{{ route.summary }}</p>

{% if route.parameters is not empty %}
<h4>Parameters:</h4>
<ul class="parameters">
    {% for parameter in route.parameters %}
    <li>
        <dl class="parameter">
            <dt>{{ parameter.name }}</dt>
            <dd>
                <dl class="parameter-definitions">
                    <dt>Description:</dt>
                    <dd>{{ parameter.description }}</dd>
                    <dt>Location:</dt>
                    <dd>{{ parameter.location }}</dd>
                    <dt>Type:</dt>
                    <dd>{{ parameter.type }}</dd>
                    <dt>Required:</dt>
                    <dd>{{ parameter.required }}</dd>
                </dl>
            </dd>
        </dl>
    </li>
    {% endfor %}
</ul>
{% endif %}
